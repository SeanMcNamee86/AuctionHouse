@model List<Auction>

@{
    string? themeOpposite = @Context.Session.GetString("ThemeOpposite").ToLower();
    string? theme = @Context.Session.GetString("Theme").ToLower();
}
<h1 class=" text-center text-@themeOpposite">Welcome to the dashboard!</h1>

<div class="d-flex flex-row justify-content-center align-items-center">
    <div class="border-end">
        <h1 class="text-primary text-center">My Auctions</h1>
        @foreach (Auction auctions in Model)
        {
            @if (auctions.Creator.UserId == Context.Session.GetInt32("UUID"))
            {

                <div class="card bg-@theme shadow-lg-black m-3 p-4 d-flex flex-row align-items-center">
                    <div>
                        <a asp-controller="Auction" asp-action="GetOneAuction" asp-route-oneAuctionId="@auctions.AuctionId">
                            <img class="dashImg border border-@themeOpposite border-1"
                        src="
        https://golfdigest.sports.sndimg.com/content/dam/images/golfdigest/fullset/hotlist-2022/players-irons/CALLAWAY%20APEX%20PRO_PLAYERS%20IRONS_HERO.jpg.rend.hgtvcom.686.686.suffix/1638477422666.jpeg"
                        alt="Auction Img">
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="card-title border-bottom">
                            <h3>
                                <a asp-controller="Auction" asp-action="GetOneAuction"
                            asp-route-oneauctionId="@auctions.AuctionId"
                            class="text-@themeOpposite text-decoration-none">
                                    @auctions.Name
                                </a>
                            </h3>
                        </div>
                        <div class="card-text text-muted">
                            <h6>
                                High Bid: $@auctions.HighBid | Bids: @auctions.Bids.Count
                            </h6>
                        </div>
                        <div class="card-text text-muted">
                            <h6>
                                Time Left:
                                <span>
                                    @((auctions.EndDate - DateTime.Now).ToString(@"d\ \d\ h\ \h\ mm\ \m"))
                                </span>
                            </h6>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
    <div>
        <h1 class="text-primary text-center">My Bids</h1>
        @foreach (Auction auctions in Model)
        {
            @foreach (Bid myBid in auctions.Bids)

                @if (myBid.UserId == Context.Session.GetInt32("UUID"))
                {
                    <div class="card bg-@theme shadow-lg-black m-3 p-4 d-flex flex-row align-items-center">
                        <div>
                            <a asp-controller="Auction" asp-action="GetOneAuction" asp-route-oneAuctionId="@auctions.AuctionId">
                                <img class="dashImg border border-@themeOpposite border-1"
                        src="
        https://golfdigest.sports.sndimg.com/content/dam/images/golfdigest/fullset/hotlist-2022/players-irons/CALLAWAY%20APEX%20PRO_PLAYERS%20IRONS_HERO.jpg.rend.hgtvcom.686.686.suffix/1638477422666.jpeg"
                        alt="Auction Img">
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="card-title border-bottom">
                                <h3>
                                    <a asp-controller="Auction" asp-action="GetOneAuction"
                            asp-route-oneauctionId="@auctions.AuctionId"
                            class="text-@themeOpposite text-decoration-none">
                                        @myBid.Auction.Name
                                    </a>
                                </h3>
                            </div>
                            <div class="card-text text-muted">
                                @if (auctions.HighBid == myBid.Amount)
                                {
                                    <h6 class="text-success">
                                        You are winning!
                                    </h6>
                                    <h6>
                                        High Bid: $@myBid.Amount | Buy Now: $@myBid.Auction.BuyNow
                                    </h6>
                                }
                                else
                                {
                                    <h6 class="text-danger">
                                        You have been out bid!
                                    </h6>
                                    <h6>
                                        High Bid: $@myBid.Auction.HighBid | Buy Now: $@myBid.Auction.BuyNow
                                    </h6>
                                }
                            </div>
                            <div class="card-text text-muted">
                                <h6>
                                    Time Left:
                                    <span>
                                        @((myBid.Auction.EndDate - DateTime.Now).ToString(@"d\ \d\ h\ \h\ mm\ \m"))
                                    </span>
                                </h6>
                            </div>
                        </div>
                    </div>
                }
        }
    </div>
</div>